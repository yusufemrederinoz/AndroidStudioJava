<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnasayfaActivity">
    <Toolbar
        android:id="@+id/anasayfaToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#363537" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="ÇIKIŞ YAP"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/anasayfa7soru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:text="Firmanızın yıllık cirosu nedir?"
            android:textSize="30sp"

            />

        <CheckBox
            android:id="@+id/checkbox71"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="0 - 100.000 TL"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox72"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="100.001 - 250.000 TL"


            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox73"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="250.001 - 500.000 TL"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox74"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="500.001 - 1.000.000 TL"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox76"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2.500.001 - 5.000.000 TL"
            android:textSize="20sp"

            />
        <CheckBox
            android:id="@+id/checkbox77"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="5.000.001 - 10.000.000 TL"
            android:textSize="20sp"

            />
        <CheckBox
            android:id="@+id/checkbox78"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="10.000.000 TL ve yukarısı"
            android:textSize="20sp"

            />

    </LinearLayout>

    <Button
        android:id="@+id/anasayfa7button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:layout_marginLeft="300dp"
        android:text="İleri  >>"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/anasayfa7button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:layout_marginRight="300dp"
        android:text="Geri"
        android:textSize="16dp" />


</RelativeLayout>