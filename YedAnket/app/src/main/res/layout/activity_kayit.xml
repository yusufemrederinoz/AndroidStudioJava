<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"



    tools:context=".KayitActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Toberli Anket"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        
        />

    <EditText
        android:id="@+id/edt_kullanici_adi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_arkaplan"
        android:hint="Kullanici Adi"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"


        />
    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_arkaplan"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:hint="E-Mail"


    />
    <EditText
        android:id="@+id/edt_sifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_arkaplan"
        android:hint="Sifreniz"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        

        />
    <Button
        android:id="@+id/btn_kayit_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KAYIT OL"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        
        />
    <TextView
        android:id="@+id/GirisSayfasi_git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaten Bir Hesabiniz Var mi? Giris Yapin"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        />





</LinearLayout>